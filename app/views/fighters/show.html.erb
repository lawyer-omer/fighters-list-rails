<div class="jumbotron p-3 mb-2 bg-secondary text-white">
  <h1 class="display-4"><%= @fighter.first_name %> <%= @fighter.last_name %> </h1>
  <p class="lead"><%= @fighter.rank %>, <%= @fighter.style %> fighter. </p>
  <hr class="my-4">
  <p>Başlama Tarihi  <%= @fighter.start_date %></p>
  <p>Notlar: <%= @fighter.notes %> </p>
  <p>Son Ödeme: <%= @fighter.last_payment %></p>
  <br>
  <%= link_to 'Düzenle', edit_fighter_path(@fighter), class:"btn btn-light" %> 
  <%= link_to 'Geri', fighters_path, class:"btn btn-dark" %>
  <%= link_to 'Sil', @fighter, method: :delete, data: { confirm: 'Emin Misin?' },  type:"button", class:"btn btn-danger" %>
</div>

